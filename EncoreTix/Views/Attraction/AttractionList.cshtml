@model EncoreTix.Core.Model.AttractionServices.EmbeddedAttractionList

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Attractions != null && Model.Attractions.Any())
        {
            @foreach (var attraction in Model.Attractions)
            {
                <tr style="cursor: pointer;" onclick="location.href='@Url.Action("Detail", "Attraction", new { id = attraction.Id })'">
                    <td>@attraction.Name</td>
                    <td>@attraction.Type</td>
                    <td>
                        @if (attraction.Images != null && attraction.Images.Any())
                        {
                            <img src="@attraction.Images.First().Url" alt="@attraction.Name Image" width="100" style="height: auto;" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No attractions to display.</td>
            </tr>
        }
    </tbody>
</table>
